@model IEnumerable<ajax_test.Usuario>

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="caja1">
        <a href="@Url.Action("Create", "Usuarios")"><i id="agregar" class="material-icons">person_add</i></a>
    </div>
    <div ng-app="usuarios" ng-controller="usuarioscontroller">
        <div class="row">
            <div class="col" s6>
                <h2>Usuarios</h2>
            </div>
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th>
                        Direccion
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Telefono
                    </th>

                </tr>

                <tr ng-repeat="usuario in listausuarios">

                    <td>
                        {{usuario.Nombre}}
                    </td>
                    <td>
                        {{usuario.Apellido}}
                    </td>
                    <td>
                        {{usuario.Direccion}}
                    </td>
                    <td>
                        {{usuario.Email}}
                    </td>
                    <td>
                        {{usuario.Telefono}}
                    </td>
                </tr>
            </table>
        </div>
    </div>

